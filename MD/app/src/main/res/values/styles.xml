<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Petis.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bg_green</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <style name="CustomActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:drawableStart">@drawable/logopetis2</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ActiveTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="InactiveTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary_green_dark</item>
        <item name="tint">@android:color/white</item>
        <item name="android:elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="shapeAppearanceOverlay">@style/FloatingActionButtonRadius</item>
    </style>

    <style name="FloatingActionButtonRadius" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerSize">16dp</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/hint_color_selector</item>
    </style>

    //settings
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

</resources>